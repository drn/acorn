alias acorn="~/.acorn/update && ~/.acorn/run && source ~/.bash_aliases && source ~/.bash_profile"
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -lh'
alias la='ls -lAh'
alias l='ls -lah'
alias vi='vim'
alias v='vim'
alias v.="vim ."
alias g='git'
alias down='cd ~/downloads'
alias misc='cd ~/downloads/misc'
alias movies='cd ~/downloads/movies'
alias safe='cd ~/downloads/safe'
alias tv='cd ~/downloads/tv'
alias start-rtorrent="nohup /usr/local/bin/rtorrent &"
alias connect-rtorrent="screen -r rtorrent"
alias restart-rtorrent="killall -9 -u $(whoami) rtorrent; screen -S rtorrent rtorrent"
alias clean="rm -rf ~/www/*/public_html/rutorrent/share/users/*/torrents/*"
alias data='cd ~/private/rtorrent/data'
alias unfail='for f in *.fail; do mv "$f" "${f/.fail}"; done'
