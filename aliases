alias acorn="~/.acorn/update && ~/.acorn/run && source ~/.bash_aliases && source ~/.bash_profile"
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -lh'
alias la='ls -lAh'
alias l='ls -lah'
alias vi='vim'
alias v='vim'
alias v.="vim ."
alias g='git'
alias down='cd ~/downloads'
alias tv='cd ~/downloads/tv'
alias movies='cd ~/downloads/movies'
alias safe='cd ~/downloads/safe'
alias connect-rtorrent="screen -r rtorrent"
alias restart-rtorrent="killall -9 -u $(whoami) rtorrent; screen -S rtorrent rtorrent"
alias sickchill="~/src/pip/bin/python ~/SickChill/SickChill.py -d --pidfile="$HOME/SickChill/SickChill.pid" && echo http://$(hostname -f):$(sed -rn 's/(.*)web_port = //p' ~/SickChill/config.ini)/$(whoami)/sickchill"
alias stop-sickchill="pkill -fu $(whoami) 'SickChill/SickChill.py'"
alias restart-sickchill="pkill -fu $(whoami) 'SickChill/SickChill.py' && rm -rf ~/SickChill/SickChill.pid && ~/src/pip/bin/python ~/SickChill/SickChill.py -d --pidfile=$HOME/SickChill/SickChill.pid"
